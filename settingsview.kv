#:kivy 1.8.0

<SettingsView>:
	orientation: 'vertical'
	BoxLayout:
		size_hint_y: 0.25
		rcid: 'fieldContainer'
		orientation: 'horizontal'
		FieldLabel:
			size_hint: (0.6, 1.0)
			rcid: 'fieldLabel'
			halign: 'right'
			font_size: sp(20)
			text: ''
		AnchorLayout:
			anchor_x: 'center'
			anchor_y: 'center'
			size_hint: (0.4, 1.0)
			rcid: 'control'
	HelpLabel:
		size_hint_y: 0.75
		rcid: 'helpLabel'
		halign: 'left'
		text: ''

<SettingsMappedSpinner>:
	rcid: 'settingsCtrl'
	size_hint: (0.6, 0.3)
	on_text: root.on_text(*args)
	
<SettingsSwitch>:	
	rcid: 'settingsCtrl'
	on_active: root.on_switch_active(args[1])

<SettingsButton>:	
	rcid: 'settingsCtrl'
	size_hint: (None, None)
	size: (dp(80), dp(40))
	on_release: root.on_button_active(*args)
	
<SettingsTextField>:
	rcid: 'settingsCtrl'
	size_hint: (0.6, 0.3)
	on_text: root.on_text(*args)
