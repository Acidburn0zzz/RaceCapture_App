#:kivy 1.8.0

<SettingsView>:
	size_hint: (1.0, 0.2)
	spacing: 40
	orientation: 'vertical'
	BoxLayout:
		rcid: 'fieldContainer'
		orientation: 'horizontal'
		FieldLabel:
			rcid: 'fieldLabel'
			halign: 'right'
			font_size: 20
			text: ''
		BoxLayout:
			rcid: 'control'
			
	HelpLabel:
		rcid: 'helpLabel'
		halign: 'left'
		text: ''

<SettingsSwitch>:	
	rcid: 'settingsCtrl'
	on_active: root.on_switch_active(args[1])

<SettingsButton>:	
	rcid: 'settingsCtrl'
	size_hint: (None, 0.2)
	on_release: root.on_button_active(*args)
	#size: (dp(60), dp(40))
	pos_hint: {'center_x': .5, 'center_y': .5}
		