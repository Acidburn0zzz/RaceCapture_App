#:kivy 1.9.0

<SettingsView>:
    BoxLayout:
        rcid: 'fieldContainer'
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            spacing: 5
            size_hint: (0.6, 1.0)
            FieldLabel:
                size_hint: (1, 1.0)
                rcid: 'fieldLabel'
                halign: 'right'
                font_size: sp(20)
                text: ''
            TextWidget:
                size_hint: (1, 1.0)
                rcid: 'helpLabel'
                halign: 'right'
                text: ''
        BoxLayout:
            padding: [0, 10, 0, 10]
            size_hint: (0.4, 1.0)
            orientation: 'vertical'
            halign: 'left'
            spacing: 5
            BoxLayout:
                padding: [10,0]
                rcid: 'control'
                halign: 'left'
            HelpLabel:
                padding: [10,2]
                size_hint_x: 1
                id: error
                halign: 'left'
                text: ''

<SettingsMappedSpinner>:
	rcid: 'settingsCtrl'
	on_text: root.on_text(*args)
	
<SettingsSwitch>:	
	rcid: 'settingsCtrl'
	on_active: root.on_switch_active(args[1])

<SettingsButton>:	
	rcid: 'settingsCtrl'
	size_hint: (None, None)
	size: (dp(80), dp(40))
	on_release: root.on_button_active(*args)
	
<SettingsTextField>:
	rcid: 'settingsCtrl'
	size_hint: (0.5, 0.3)
	on_text: root.on_text(*args)
