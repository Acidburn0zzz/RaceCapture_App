<ToolbarView>:
    orientation: 'horizontal'
    canvas.before:
        Color:
            rgba: [0.03, 0.03, 0.03, 1.0]
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
		padding: self.height * 0.5, 0
		spacing: 0
        size_hint_x: 0.11
    	orientation: 'horizontal'
	    IconButton:
            id: 'menu'
	    	text: '\357\203\211'
	    	on_release: root.mainMenu()
	    	size_hint_x: None
	    	width: self.height * 1
	    	font_size: self.height
	    Button:
		    background_color: [0.0, 0.0, 0.0, 0.0]
		    background_down: ''
	    	text: 'Menu'
            font_name: "resource/fonts/ASL_light.ttf"
	    	size_hint_x: 0.0
	    	width: self.height * 2.4
	    	font_size: self.height * 0.8
	    	on_release: root.mainMenu()
	    	
	BoxLayout:
		orientation: 'horizontal'
		padding: self.height * 0.4, 0
		size_hint_x: 0.24
		FieldLabel:
			halign: 'left'
			text: ''
            id: activity
			font_size: self.height * 0.6

    BoxLayout:
        orientation: 'horizontal'
        padding: self.height * 0.4, 0
        size_hint_x: 0.25
        FieldLabel:
            halign: 'center'
            text: ''
            id: state
            font_size: self.height * 0.6

	BoxLayout:
		orientation: 'horizontal'
		padding: self.height * 0.4, 0
		size_hint_x: 0.25
		FieldLabel:
			halign: 'right'
			text: ''
            id: status
			font_size: self.height * 0.6
		
	BoxLayout:
		orientation: 'horizontal'
		size_hint_x: 0.15
		spacing: self.height * 0.2
	    ProgressBar:
	    	size_hint_x: 0.5
			id: pbar
	    IconButton:
            id: teleStatus
	    	text: '\357\203\256'
	    	size_hint_x: 0.125
	    	color: [0.0, 1.0, 0.0, 0.2]    	
	    	font_size: self.height * 0.7
	    IconButton:
            id: rcTxStatus
	    	text: '\357\200\231'
	    	size_hint_x: 0.125
	    	color: [0.0, 1.0, 0.0, 0.2]
	    	font_size: self.height * 0.7   	
	    IconButton:
            id: rcRxStatus
	    	text: '\357\202\223'
	    	size_hint_x: 0.125
	    	color: [0.0, 0.8, 1.0, 0.2]
	    	font_size: self.height * 0.7   	
	    	
	    	