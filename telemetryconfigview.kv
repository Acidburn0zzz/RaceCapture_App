#:kivy 1.8.0


<TelemetryConfigView>:
	padding: (dp(10),dp(10))
	spacing: dp(20)
	orientation: 'vertical'
	HSeparatorMinor:
		text: 'Telemetry Configuration'
		halign: 'left'
	SettingsView:
		size_hint_y: 0.25
		rcid: 'deviceId'
		label_text: 'Telemetry Device Id'
		help_text: 'Enter the telemetry device Id assigned to you from race-capture.com'
	Label:
		size_hint_y: 0.75