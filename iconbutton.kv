<RoundedRect>:
	line_width: (self.height * 0.2) + 1
	radius: self.height * 0.05
    canvas:
        Color: 
        	rgb: self.rect_color
        Line:
            rounded_rectangle: (self.x, self.y, self.right - self.x, self.top - self.y, self.radius)      
            width: self.line_width
        Rectangle:
            pos: self.pos
            size: self.size

<TileIconButton>:
	RoundedRect:
		rect_color: root.tile_color
	BoxLayout:
		orientation: 'vertical'
	    IconButton:
	    	id: icon
	    	color: root.icon_color
	    	size_hint_y: 0.7
	    	font_size: self.height * 0.9
	    	text: root.icon
	    	on_press: root.on_button_press()
	    Label:
	    	id: label
	    	font_name: root.title_font
	    	font_size: self.height * 0.5
	    	color: root.title_color
	    	size_hint_y: 0.3
	    	text: root.title	
            
<LabelIconButton>:
    RoundedRect:
        rect_color: root.tile_color
    BoxLayout:
        orientation: 'horizontal'
        Label:
            id: label
            valign: 'middle'
            text_size: (self.width, None)
            font_name: root.title_font
            font_size: self.height 
            color: root.title_color
            size_hint_y: 1.0
            size_hint_x: 0.7
            text: root.title    
        IconButton:
            id: icon
            size_hint_x: 0.3
            color: root.icon_color
            font_size: self.height * 1.1
            text: root.icon
            on_press: root.pressed(*args)

<IconButton>:
    background_color: [0, 0, 0, 0]
    background_down: ''
    font_size: self.height
    
    color: [1.0, 1.0, 1.0, 0.8]
    font_name: 'resource/fonts/fa.ttf'
    