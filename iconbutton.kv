<TileIconButton>:
	orientation: 'vertical'
	on_pos: self.compute_points()
	on_size: self.compute_points()
	on_corners: self.compute_points()
	on_resolution: self.compute_points()
	corners: [dp(40), dp(40), dp(40), dp(40)]
	line_width: dp(7)
	resoultion: dp(100)
    canvas:
        Color: 
        	rgb: self.line_color
        Line:
            # we don't care about the arguments, pass them to get
            # binding
            points: self.points
            width: self.line_width
            #loop: True
    IconButton:
    	id: icon
    	color: root.icon_color
    	size_hint_y: 0.7
    	font_size: dp(120)
    	text: root.icon
    Label:
    	id: label
    	color: root.title_color
    	size_hint_y: 0.3
    	font_size: dp(30)
    	text: root.title	
	
            
<IconButton>:
    background_color: [0, 0, 0, 0]
    background_down: ''
    font_size: dp(25)
    
    color: [1.0, 1.0, 1.0, 0.8]
    font_name: 'fa.ttf'
    