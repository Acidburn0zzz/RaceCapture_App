<RoundedRect>:
	on_pos: self.compute_points()
	on_size: self.compute_points()
	on_corners: self.compute_points()
	on_resolution: self.compute_points()
	corners: [self.height * 0.1, self.height * 0.1, self.height * 0.1, self.height * 0.1]
	line_width: self.height * 0.12
    canvas:
        Color: 
        	rgb: self.rect_color
        Line:
            points: self.points
            width: self.line_width

<TileIconButton>:
	RoundedRect:
		rect_color: root.tile_color
	BoxLayout:
		orientation: 'vertical'
	    IconButton:
	    	id: icon
	    	color: root.icon_color
	    	size_hint_y: 0.7
	    	font_size: self.height * 0.9
	    	text: root.icon
	    	on_press: root.on_button_press()
	    Label:
	    	id: label
	    	font_name: root.title_font
	    	font_size: self.height * 0.5
	    	color: root.title_color
	    	size_hint_y: 0.3
	    	text: root.title	
            
<IconButton>:
    background_color: [0, 0, 0, 0]
    background_down: ''
    font_size: self.height
    
    color: [1.0, 1.0, 1.0, 0.8]
    font_name: 'resource/fonts/fa.ttf'
    