#:kivy 1.8.0

<ChannelNameSelectorView>:
    BoxLayout:
        spacing: dp(5)
        orientation: 'horizontal'
        FieldLabel:
            size_hint_x: 0.5
            text: 'Channel Name'
            halign: 'right'
        ChannelNameSpinner:
            size_hint_x: 0.4
        	rcid: 'id'
            on_text: root.onSelect(*args)
        IconButton:
            size_hint_x: 0.1
            text: u'\uf013'
            font_size: self.height * 0.6
            size_hint_x: 0.1
            on_release: root.on_customize(*args)
        