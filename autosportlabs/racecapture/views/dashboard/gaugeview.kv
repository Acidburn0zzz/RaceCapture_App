<GaugeView>:
	BoxLayout:
		orientation: 'horizontal'
		BoxLayout:
			size_hint_x: 0.3
			orientation: 'vertical'
			RoundGauge:
				rcid: 'tl'
			RoundGauge:
				rcid: 'bl'
		BoxLayout:
			size_hint_x: 0.4
			orientation: 'vertical'
			RoundGauge:
				rcid: 'center'
				value_size: dp(80)
				title_size: dp(40)
		BoxLayout:
			size_hint_x: 0.3
			orientation: 'vertical'
			RoundGauge:
				rcid: 'tr'
			RoundGauge:
				rcid: 'br'
									
