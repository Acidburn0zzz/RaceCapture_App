<DashboardView>:
	BoxLayout:
		orientation: 'vertical'
		ScreenManager:
			rcid: 'screens'
			size_hint_y: 0.90
		BoxLayout:
			size_hint_y: 0.10
			orientation: 'horizontal'
			IconButton:
				color: [0.2, 0.2, 0.2, 1.0]
				font_size: self.height
				rcid: 'teleRxStatus'
				text: ' \357\203\231'
				size_hint_x: 0.2
				on_release: root.on_nav_left()   				
			DigitalGauge:
				rcid: 'left'
			DigitalGauge:
				rcid: 'center'
			DigitalGauge:
				rcid: 'right'
			IconButton:
				color: [0.2, 0.2, 0.2, 1.0]
				font_size: self.height
				rcid: 'teleRxStatus'
				text: '\357\203\232 '
				size_hint_x: 0.2
				on_release: root.on_nav_right()

