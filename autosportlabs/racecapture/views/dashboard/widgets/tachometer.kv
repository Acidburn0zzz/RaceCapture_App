<Tachometer>:
	anchor_x: 'center'
	anchor_y: 'center'
    value_size: dp(50)
    title_size: dp(25)
    gauge_size: dp(100)
	Label:
		font_name: 'resource/fonts/tach_10000.ttf'
		rcid: 'gaugeShadow'
		text: u'\uE663'
		color: (0.15, 0.15, 0.15, 1.0)
		font_size: root.gauge_size				
	Label:
		font_name: 'resource/fonts/tach_10000.ttf'
		rcid: 'gauge'
		font_size: root.gauge_size
	FloatLayout:
		BoxLayout:
			rcid: 'tachvalue'
			pos_hint: {'top':0.68, 'right':0.93}
			size_hint: (0.22, 0.1)
			orientation: 'horizontal'
			spacing: dp(10)
			canvas.before:
				Color:
					rgba: 0.0, 0.0, 0.0, 0.8
				Rectangle:
				    pos: self.pos
				    size: self.size 
			FieldLabel:
				rcid: 'value'
				font_size: root.value_size
				size_hint: (0.7, 1.0)
				halign: 'right'
			FieldLabel:
				canvas.before:
				rcid: 'title'
				font_size: root.title_size
				size_hint: (0.3, 1.0)
				halign: 'center'			    
