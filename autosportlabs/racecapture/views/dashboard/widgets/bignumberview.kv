<BigNumberView>:
    rcid: 'bignumberview'
	RoundedRect:
		rcid: 'bg'
		rect_color: root.tile_color
	BoxLayout:
		orientation: 'vertical'
	    Label:
	    	rcid: 'value'
	    	color: root.title_color
	    	size_hint_y: 0.85
	    	on_texture: root.change_font_size()
	    	font_size: root.value_font_size
	    	font_name: "resource/fonts/ASL_light.ttf"
	    Label:
	    	rcid: 'title'
			font_name: "resource/fonts/ASL_light.ttf"
	    	font_size: root.title_font_size
	    	color: root.title_color
	    	size_hint_y: 0.15
	    	font_size: dp(30)	    	
	    	text: root.title
