<RoundGauge>:
	anchor_x: 'center'
	anchor_y: 'center'
    value_size: self.height * 0.16
    title_size: self.height * 0.08
    FieldLabel:
    	id: add_gauge
    	halign: 'center'
    	text: '+'
    	color: (0.5, 0.5, 0.5, 1.0)
    	font_size: self.height * 0.2
	Label:
		font_name: 'resource/fonts/dial-gauge.ttf'
		rcid: 'gaugeShadow'
		text: u'\uE663'
		color: (0.15, 0.15, 0.15, 1.0)
		font_size: root.gauge_size				
	Label:
		font_name: 'resource/fonts/dial-gauge.ttf'
		rcid: 'gauge'
		font_size: root.gauge_size
	FieldLabel:
		rcid: 'value'
		font_size: root.value_size
		halign: 'center'			
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'bottom'
		FieldLabel:
			size_hint_y: 0.5
			rcid: 'title'
			font_size: root.title_size
			halign: 'center'
