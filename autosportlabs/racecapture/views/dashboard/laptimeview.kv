<LaptimeView>:
	BoxLayout:
		orientation: 'vertical'
		Laptime:
			size_hint_y: 0.25
			rcid: 'curLap'
			value_size: dp(180)
			halign: 'center'
		BoxLayout:
			size_hint_y: 0.6
			orientation: 'horizontal'
			AnchorLayout:
				size_hint_x: 0.25
				BigNumberView:
					size_hint: (0.6, 0.6)
					title: 'Lap'
					warning_color: [0.2, 0.2, 0.2, 1.0]
					alert_color: [0.2, 0.2, 0.2, 1.0]
			TimeDelta:
				size_hint_x: 0.65
				rcid: 'delta'
				value_size: dp(200)
				halign: 'right'
			BoxLayout:
				size_hint_x: 0.1
		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: 0.15
			spacing: dp(10)
			FieldLabel:
				size_hint_x: 0.15
				font_size: dp(40)
				halign: 'right'
				text: 'Best'
			Laptime:
				rcid: 'best'
				size_hint_x: 0.35
				halign: 'left'
				normal_color: [1.0, 0.0 , 1.0, 1.0]
				value_size: dp(80)
			Laptime:
				rcid: 'sector'
				size_hint_x: 0.35
				halign: 'right'
				value_size: dp(80)
				normal_color: [1.0, 1.0 , 0.0, 1.0]
			FieldLabel:
				size_hint_x: 0.15
				font_size: dp(40)
				halign: 'left'
				rcid: 'sector'
				text: 'Sector'
				