<TachometerView>:
    rcid: 'tachview'
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'center'
		AnchorLayout:
			anchor_x: 'right'
			anchor_y: 'bottom'
			BoxLayout:
				size_hint: (0.8, 0.6)
				orientation: 'horizontal'
				AnchorLayout:
					size_hint: (0.3, 1.0)
					anchor_x: 'center'
					anchor_y: 'center'
					BigNumberView:
						size_hint: (0.65, 0.6)
						title: 'Lap'
						channel: 'LapCount'
						warning_color: [0.2, 0.2, 0.2, 1.0]
						alert_color: [0.2, 0.2, 0.2, 1.0]
				BoxLayout:
					size_hint: (0.7, 1.0)
					orientation: 'vertical'
					Laptime:
						rcid: 'curLap'
						channel: 'LapTime'
						halign: 'left'
						value_size: dp(120)
					BoxLayout:
						orientation: 'horizontal'
						TimeDelta:
							size_hint_x: 0.50
							rcid: 'delta'
							channel: 'LapDelta'
							halign: 'left'
							value_size: dp(120)
							value: None
						Laptime:
							size_hint_x: 0.50
							rcid: 'bestLap'
							channel: 'BestLap'
							value_size: dp(60)
							halign: 'center'
							normal_color: [1.0, 0.0 , 1.0, 1.0]
		AnchorLayout:
			anchor_x: 'left'
			anchor_y: 'center'
			orientation: 'horizontal'
			Tachometer:
				size_hint_y: 0.8
				rcid: 'tach'
				channel: 'RPM'
				min: 0
				max: 10000
