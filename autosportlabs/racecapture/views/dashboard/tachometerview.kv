<TachometerView>:
    rcid: 'tachview'
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'center'
		AnchorLayout:
			anchor_x: 'right'
			anchor_y: 'bottom'
			BoxLayout:
				size_hint: (0.8, 0.6)
				orientation: 'horizontal'
				AnchorLayout:
					size_hint: (0.25, 1.0)
					anchor_x: 'center'
					anchor_y: 'center'
					BigNumberView:
						size_hint: (0.5, 0.6)
						channel: 'CurrentLap'
						warning_color: [0.2, 0.2, 0.2, 1.0]
						alert_color: [0.2, 0.2, 0.2, 1.0]
				BoxLayout:
					size_hint: (0.7, 1.0)
					orientation: 'vertical'
					Laptime:
						rcid: 'curLap'
						channel: 'CurLapTime'
						halign: 'left'
					BoxLayout:
						orientation: 'horizontal'
						TimeDelta:
							rcid: 'delta'
							channel: 'LapDelta'
							halign: 'left'
							value: None
		AnchorLayout:
			anchor_x: 'left'
			anchor_y: 'center'
			orientation: 'horizontal'
			Tachometer:
				size_hint_y: 0.8
				rcid: 'tach'
				channel: 'RPM'
				min: 0
				max: 10000
