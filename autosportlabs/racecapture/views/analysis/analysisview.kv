<LogImportWidget>:
    size: root.size
    BoxLayout:
    	spacing: dp(5)
        orientation: 'vertical'
        BoxLayout:
        	size_hint_y: 0.25
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Datalog Location'
                Label:
                    text: 'Session Name'
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    orientation: 'horizontal'
                    TextInput:
                        id: log_path
                        multiline: False
                    IconButton:
                        id: log_open
                        text: '\357\204\225'
                        rcid: 'opendatalog'
                        on_release: root.select_log()
                TextInput:
                    id: session_name
        Label:
            size_hint_y: .1
            size_hint_x: .1
            text: 'Notes'
        TextInput:
            id: session_notes
            size_hint_y: 0.35
        Button:
        	size_hint_x: 0.3
        	size_hint_y: 0.1
            text: 'Begin Import'
            on_release: root.load_log()
        Label:
            size_hint_y: .1
            id: current_status
        ProgressBar:
            id: log_load_progress
            size_hint_y: .1

<AnalysisView>:
	BoxLayout:
		orientation: 'horizontal'
		SessionBrowser:
			size_hint_x: 0.1
			id: sessions
	    BoxLayout:
	        size_hint_x: 0.9
	        orientation: 'vertical'
	        BoxLayout:
	            orientation: 'horizontal'
	            RaceTrackView:
	                id: trackview
	                size_hint_x: 0.75
	            Label:
	                size_hint_x: 0.25
	                text: 'secondary chart'
	        BoxLayout:
	            orientation: 'horizontal'
	            BoxLayout:
	                orientation: 'horizontal'
	                size_hint_y: 0.1
	                size_hint_x: 0.1
	                IconButton:
	                    id: 'read'
	                    text: '\357\202\223'
	                    rcid: 'readlog'
	                    on_release: root.import_datalog()
	            LineChart:
	            	id: mainchart
