<LogImportWidget>:
    size: root.size
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Datastore Location'
                    id: dstore_loc_label
                Label:
                    text: 'Datalog Location'
                Label:
                    text: 'Session Name'
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    orientation: 'horizontal'
                    TextInput:
                        id: dstore_path
                    IconButton:
                        id: dstore_select
                        text: '\357\203\207'
                        rcid: 'savedatastore'
                        on_release: root.select_dstore()
                BoxLayout:
                    orientation: 'horizontal'
                    TextInput:
                        id: log_path
                    IconButton:
                        id: log_open
                        text: '\357\204\225'
                        rcid: 'opendatalog'
                        on_release: root.select_log()
                TextInput:
                    id: session_name
        Label:
            size_hint_y: .2
            size_hint_x: .1
            text: 'Notes'
        TextInput:
            id: session_notes
            size_hint_y: 2.5
        Button:
            size_hint_y: .3
            text: 'Begin Import'
            on_release: root.load_log()
        ProgressBar:
            id: log_load_progress
            size_hint_y: .1

<AnalysisView>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            RaceTrackView:
                id: trackview
                size_hint_x: 0.75
            Label:
                size_hint_x: 0.25
                text: 'secondary chart'
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.1
                size_hint_x: 0.1
                IconButton:
                    id: 'open'
                    text: '\357\204\225'
                    rcid: 'opendatastore'
                    on_release: root.open_datastore()
                IconButton:
                    id: 'read'
                    text: '\357\202\223'
                    rcid: 'readlog'
                    on_release: root.import_datalog()
            Label:
                text: 'chart'
