<LogImportWidget>:
    size: root.size
    BoxLayout:
    	spacing: dp(5)
        orientation: 'vertical'
        BoxLayout:
        	size_hint_y: 0.25
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Datalog Location'
                Label:
                    text: 'Session Name'
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    orientation: 'horizontal'
                    TextInput:
                        id: log_path
                        multiline: False
                    IconButton:
                        id: log_open
                        text: '\357\204\225'
                        rcid: 'opendatalog'
                        on_release: root.select_log()
                TextInput:
                    id: session_name
        Label:
            size_hint_y: .1
            size_hint_x: .1
            text: 'Notes'
        TextInput:
            id: session_notes
            size_hint_y: 0.35
        Button:
        	size_hint_x: 0.3
        	size_hint_y: 0.1
            text: 'Begin Import'
            on_release: root.load_log()
        Label:
            size_hint_y: .1
            id: current_status
        ProgressBar:
            id: log_load_progress
            size_hint_y: .1

<AnalysisView>:
	BoxLayout:
		orientation: 'horizontal'
		BoxLayout:
			size_hint_x: 0.2
			orientation: 'vertical'
			SessionBrowser:
				size_hint_y: 0.9
				id: sessions
	        IconButton:
	        	size_hint_y: 0.1
	            id: 'read'
	            font_size: root.height * 0.1
	            text: u'\uf0fe'
	            on_release: root.on_add_stream()
	    BoxLayout:
	        size_hint_x: 0.8
	        orientation: 'vertical'
	        BoxLayout:
	            orientation: 'horizontal'
	            AnalysisMap:
	                id: analysismap
	                size_hint_x: 0.75
	            Label:
	                size_hint_x: 0.25
	                text: 'secondary chart'
            LineChart:
            	id: mainchart
            	on_channel_selected: root.on_channel_selected(*args)
            	on_marker: root.on_marker(*args)
