#:kivy 1.8
<CustomizeChannelsView>:
    orientation: 'vertical'
    ScreenManager:
        id: screens

<CurrentChannel>:
    spacing: dp(10)
    size_hint_y: None
    height: dp(30)
    orientation: 'horizontal'
    FieldLabel:
        id: name
        size_hint_x: 0.9
        font_size: root.height * 0.90   
    IconButton:
        size_hint_x: 0.1
        text: '\357\200\224'
        on_release: root.on_delete()
            
<CurrentChannelsView>:
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            id: scroller
            size_hint_y: 0.9
            do_scroll_x:False
            do_scroll_y:True
            GridLayout:
                id: current_channels
                row_default_height: root.height * 0.12
                row_force_default: True
                size_hint_y: None
                height: max(self.minimum_height, scroller.height)                                      
                cols: 1
        BoxLayout:
            size_hint_y: 0.1
            orientation: 'horizontal'
            IconButton:
                id: go_back
                text: u'\uf00c'
                on_release: root.confirm_customize()
            IconButton:
                id: add
                text: u'\uf0fe'
                on_release: root.add_channels()
            

<AddChannelsView>:
    BoxLayout:
        orientation: 'vertical'
        ChannelSelectorView:
            multi_select: True
            id: add_channels
            size_hint_y: 0.9
        BoxLayout:
            size_hint_y: 0.1
            orientation: 'horizontal'
            IconButton:
                id: confirm
                disabled: True
                text: u'\uf00c'
                on_release: root.confirm_add()
            IconButton:
                color: ColorScheme.get_primary()
                id: go_back
                text: u'\uf00d'
                on_release: root.go_back()
