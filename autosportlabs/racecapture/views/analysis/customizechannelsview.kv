#:kivy 1.8
<CustomizeChannelsView>:
    orientation: 'vertical'
    ScreenManager:
        id: screens

            
<CurrentChannelsView>:
    ScrollView:
        id: scroller
        size_hint_y: 0.9
        do_scroll_x:False
        do_scroll_y:True
        GridLayout:
            id: current_channels
            row_default_height: root.height * 0.12
            row_force_default: True
            size_hint_y: None
            height: max(self.minimum_height, scroller.height)                                      
            cols: 2

<AddChannelsView>:
    BoxLayout:
        orientation: 'vertical'
        ChannelSelectorView:
            id: add_channels
            size_hint_y: 0.9
        BoxLayout:
            size_hint_y: 0.1
            orientation: 'horizontal'
            IconButton:
                id: go_back
                text: u'\uf060'
                on_release: root.go_back()
            IconButton:
                id: confirm
                disabled: True
                text: u'\uf00c'
                on_release: root.confirm_add()
