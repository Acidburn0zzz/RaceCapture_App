<ChannelCustomizationView>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        BoxLayout:
        	orientation: 'horizontal'
        	spacing: dp(10)
        	FieldLabel:
        		size_hint_x: 0.25
        		text: 'Warning'
        		halign: 'right'
        	GridLayout:
        		spacing: dp(10)
        		size_hint_x: 0.75
        		cols: 2
        		orientation: 'vertical'
        		FieldLabel:
        			size_hint_x: 0.25
        			text: 'Low'
        			halign: 'right'
	    		Slider:
	    			size_hint_x: 0.75
	    			id: warnLow
        		FieldLabel:
        			size_hint_x: 0.25
        			text: 'High'
        			halign: 'right'
	    		Slider:
	    			size_hint_x: 0.75
	    			id: warnHigh
	    			
	    		Widget:
	    			size_hint_x: 0.25
	    		BoxLayout:
	    			size_hint_x: 0.75
	    			orientation: 'horizontal'
	    			FieldLabel:
	    				halign: 'right'
	    				id: warnLowValue
	    				text: '{:.1f}'.format(warnLow.value)
    				FieldLabel:
    					halign: 'center'
    					text: '-'
    				FieldLabel:
    					halign: 'left'
    					id: warnHighValue
    					text: '{:.1f}'.format(warnHigh.value)
		BoxLayout:
			orientation: 'horizontal'
			spacing: dp(10)
        	FieldLabel:
        		size_hint_x: 0.25
        		text: 'Alert'
        		halign: 'right'
        	GridLayout:
        		spacing: dp(10)
        		size_hint_x: 0.75
        		cols: 2
        		orientation: 'vertical'
        		FieldLabel:
        			size_hint_x: 0.25
        			text: 'Low'
        			halign: 'right'
	    		Slider:
	    			size_hint_x: 0.75
	    			id: alertLow
        		FieldLabel:
        			size_hint_x: 0.25
        			text: 'High'
        			halign: 'right'
	    		Slider:
	    			size_hint_x: 0.75
	    			id: alertHigh

	    		Widget:
	    			size_hint_x: 0.25
	    		BoxLayout:
	    			size_hint_x: 0.75
	    			orientation: 'horizontal'
	    			FieldLabel:
	    				halign: 'right'
	    				id: alertLowValue
	    				text: '{:.1f}'.format(alertLow.value)
    				FieldLabel:
    					halign: 'center'
    					text: '-'
    				FieldLabel:
    					halign: 'left'
    					id: alertHighValue
    					text: '{:.1f}'.format(alertHigh.value)
	    			
    	IconButton:
    		size_hint_y: 0.2
			text: "\357\200\215"
    		on_press: root.on_close()
