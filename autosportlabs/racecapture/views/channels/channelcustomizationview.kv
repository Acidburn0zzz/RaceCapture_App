<ChannelCustomizationView>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        GridLayout:
        	cols: 3
        	spacing: dp(10)
        	FieldLabel:
        		text: 'Warning'
        		halign: 'right'
    		Slider:
    			id: warnLow
    		Slider:
    			id: warnHigh
			FieldLabel:
				text: 'Alert'
				halign: 'right'
			Slider:
				id: alertLow
			Slider:
				id: alertHigh
    	ListView:
    		size_hint_y: 0.8
    		id: channelList
    		rcid: 'channelsList'
    		font_size: dp(100)
    	IconButton:
    		size_hint_y: 0.2
			text: "\357\200\215"
    		on_press: root.on_close()
