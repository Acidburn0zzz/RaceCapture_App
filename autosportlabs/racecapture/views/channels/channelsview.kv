#:kivy 1.8.0


<ChannelEditor>:
	orientation: 'vertical'
	GridLayout:
		cols: 2
		BoxLayout:
			orientation: 'vertical'
			HSeparatorMinor:
				text: 'Channel'
			GridLayout:
				cols: 2
				FieldLabel:
					text: 'Name'
				ValueField:
					rcid: 'name'
				FieldLabel:
					text: 'Units'
				ValueField:
					rcid: 'units'
		BoxLayout:
			orientation: 'vertical'
			HSeparatorMinor:
				text: 'Settings'
			GridLayout:
				cols: 2
				FieldLabel:
					text: 'Precision'
				ValueField:
					rcid: 'prec'
				FieldLabel:
					text: 'min/max'
				BoxLayout:
					orientation: 'horizontal'
					ValueField:
						rcid: 'min'
					ValueField:
						rcid: 'max'

<ChannelLabel>:
	size_hint_y: None
	padding_x: -10
    height: max(dp(30), self.texture_size[1] + dp(5))
    text_size: self.width, None
    valign: 'middle'
    halign: 'left'
    font_size: 18
    canvas.before:
        Color:
            rgba: .1, .1, .1, .9
        Rectangle:
            size: self.size
            pos: self.pos
					
				
<ChannelView>:
    spacing: dp(10)
    height: dp(30)
    size_hint_y: None
	BoxLayout:
		orientation: 'horizontal'
		ChannelLabel:
			size_hint_x: 0.7
			rcid: 'name'
			font_size: dp(25)
		IconButton:
			size_hint_x: 0.05
			rcid: 'edit'
			text: '\357\201\204'
		IconButton:
			size_hint_x: 0.05
			rcid: 'delete'
			text: ''			
	
	
<ChannelsView>:
	padding: (dp(10),dp(10))
	spacing: dp(20)
	orientation: 'vertical'
    HSeparator:
    	text: 'Data Channels'

    ScrollView:
        id: scrlChan
        size_hint_y: 0.75
        do_scroll_x:False
        do_scroll_y:True
        GridLayout:
        	rcid: 'channelsContainer'
            padding: [dp(80), dp(20)]
            spacing: [dp(10), dp(10)]
            size_hint_y: None
            height: max(self.minimum_height, scrlChan.height)
            cols: 1
    	
    BoxLayout:
    	size_hint_y: 0.2
    	spacing: dp(5)
    	orientation: 'vertical'
    	IconButton:
    		pos_hint: {'center_x': .5, 'center_y': .5}
    		size_hint: (0.1, 0.1)
    		text: '\357\201\247'
#    		on_release: root.on_add_obd2_channel()
	    	disabled: True
	    	rcid: 'addChan'
    	
