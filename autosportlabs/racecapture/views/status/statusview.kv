#:kivy 1.8.0

<StatusView>:
    BoxLayout:
        orientation: 'horizontal'
        size_hint_x: 1
        size_hint_y: 1
        BoxLayout:
            size_hint_x: 0.2
            spacing: 0
            orientation: 'vertical'
            spacing: dp(30)
            TreeView:
                size_hint_y: 0.9
                id: menu
                size_hint: (None, 1)
                width: dp(200)
                hide_root: True
                indent_level: 0
        ScrollView:
            size_hint_x: 0.8
            size_hint_y: 1
            orientation: 'vertical'
            id: content
            size_hint_y: 1
            cols: 1
