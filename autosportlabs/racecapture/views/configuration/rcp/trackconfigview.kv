#:kivy 1.8.0
        
<SectorPointView>:
	BoxLayout:
		orientation: 'horizontal'
		Label:
			text: "Sector"
			rcid: 'title'
		FloatValueField:
			rcid: 'lat'
			on_text: root.on_lat(*args)
		FloatValueField:
			rcid: 'lon'
			on_text: root.on_lon(*args)

<TrackConfigView>:
	padding: (dp(10),dp(10))
	spacing: dp(20)
	orientation: 'vertical'
	BoxLayout:
		orientation: 'vertical'
		size_hint_y: 0.15
		spacing: dp(20)
		SettingsView:
			rcid: 'autoDetect'
			label_text: 'Automatic track detection'
			help_text: 'Automatically detect and configure the race track upon GPS lock, after power-up. If you want a fixed configuration, leave off and configure your start/finish and sector targets below'
	HLineSeparator:
		height: dp(5)
	ScreenManager:
		rcid: 'screenmgr'
		size_hint_y: 0.85

<EmptyTrackDbView>:
	BoxLayout:
		orientation: 'vertical'
		size_hint_y: 0.5
		pos_hint: {'center_x': .5, 'center_y': .5}		
		Label:
			font_size: dp(20)
			text: 'No tracks selected'
		Label:
			size_hint_y: 0.2
		Label:
			text: 'Press the add button below to select your favorite tracks for auto-detection'
			
<TrackDbItemView>:
	BoxLayout:
		orientation: 'horizontal'
		TrackInfoView:
			size_hint_x: 0.95
			rcid: 'trackinfo'
		IconButton:
			size_hint_x: 0.05
			text: '\357\200\224'

<TrackSelectionPopup>:
	orientation: 'vertical'
	TracksBrowser:
		rcid: 'browser'
		size_hint_y: 0.90
	BoxLayout:
		size_hint_y: 0.1
		orientation: 'horizontal'
		IconButton:
			text: '\357\200\214'
			on_release: root.confirmAddTracks()
		
	

<AutomaticTrackConfigScreen>:
	BoxLayout:
		orientation: 'vertical'
    	spacing: dp(10)
		Label:
			font_size: dp(20)
			text: 'Installed Race Tracks'
			size_hint_y: 0.05
		ScrollView:
			canvas.before:
		        Color:
		            rgba: 0.05, 0.05, 0.05, 1
		        Rectangle:
		            pos: self.pos
		            size: self.size
			size_hint_y: 0.90
			id: scrltracks
		    do_scroll_x:False
		    do_scroll_y:True
		    GridLayout:
		    	rcid: 'tracksgrid'
		        padding: [dp(20), dp(20)]
		        spacing: [dp(10), dp(10)]
		        size_hint_y: None
		        cols: 1
	    BoxLayout:
	    	size_hint_y: 0.05
	    	spacing: dp(10)
	    	orientation: 'vertical'
	    	IconButton:
	    		pos_hint: {'center_x': .5, 'center_y': .5}
	    		size_hint: (0.1, 0.1)
	    		text: '\357\201\247'
	    		on_release: root.on_add_track_db()
		    	disabled: True
		    	rcid: 'addtrack'
	        

	
<ManualTrackConfigScreen>:
	BoxLayout:
		orientation: 'vertical'
		SettingsView:
			size_hint_y: 0.25
			rcid: 'sepStartFinish'
			label_text: 'Separate start and finish lines'
			help_text: 'Specify a separate start / finish line for Stage Rally, Hill Climb or Autocross type courses. Leave off for circuit type courses'
		BoxLayout:
			orientation: 'vertical'
			size_hint_y: 0.75
		    	
		    BoxLayout:
		    	size_hint_y: 0.1
		    	spacing: dp(5)
				orientation: 'horizontal'
		    	HSeparatorMinor: 
		    		text: 'Type'
		    	HSeparatorMinor:
		    		text: 'Latitude'
				HSeparatorMinor:
					text: 'Longitude'
		
			SectorPointView:
				rcid:'startLine'
				size_hint_y: 0.1
			SectorPointView:
				rcid:'finishLine'
				size_hint_y: 0.1
		    	
		    HSeparatorMinor:
		        text: 'Sectors'
		    ScrollView:
		    	size_hint_y: 0.6
				do_scroll_x: False
		    	GridLayout:
		    		spacing: dp(8)
		    		rcid: 'sectorsGrid'
		    		cols: 1
	    
