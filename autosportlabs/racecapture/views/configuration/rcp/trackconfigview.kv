#:kivy 1.8.0
        
<SectorPointView>:
	BoxLayout:
		orientation: 'horizontal'
		Label:
			text: "Sector"
			rcid: 'title'
		FloatValueField:
			rcid: 'lat'
			on_text: root.on_lat(*args)
		FloatValueField:
			rcid: 'lon'
			on_text: root.on_lon(*args)

<TrackConfigView>:
	padding: (dp(10),dp(10))
	spacing: dp(20)
	orientation: 'vertical'
	BoxLayout:
		orientation: 'vertical'
		size_hint_y: 0.2
		spacing: dp(20)
		SettingsView:
			rcid: 'autoDetect'
			label_text: 'Automatic track detection'
			help_text: 'Automatically detect and configure the race track upon GPS lock, after power-up. If you want a fixed configuration, leave off and configure your start/finish and sector targets below'
	ScreenManager:
		rcid: 'screenmgr'
		size_hint_y: 0.8


<AutomaticTrackConfigScreen>:
	BoxLayout:
    	spacing: dp(30)
		size_hint_y: 0.68
		ScrollView:
			id: scrltracks
		    do_scroll_x:False
		    do_scroll_y:True
		    GridLayout:
		    	rcid: 'tracksgrid'
		        padding: [dp(20), dp(20)]
		        spacing: [dp(10), dp(10)]
		        size_hint_y: None
		        cols: 1

	
<ManualTrackConfigScreen>:
	BoxLayout:
		orientation: 'vertical'
		SettingsView:
			size_hint_y: 0.25
			rcid: 'sepStartFinish'
			label_text: 'Separate start and finish lines'
			help_text: 'Specify a separate start / finish line for Stage Rally, Hill Climb or Autocross type courses. Leave off for circuit type courses'
		BoxLayout:
			orientation: 'vertical'
			size_hint_y: 0.75
		    	
		    BoxLayout:
		    	size_hint_y: 0.1
		    	spacing: dp(5)
				orientation: 'horizontal'
		    	HSeparatorMinor: 
		    		text: 'Type'
		    	HSeparatorMinor:
		    		text: 'Latitude'
				HSeparatorMinor:
					text: 'Longitude'
		
			SectorPointView:
				rcid:'startLine'
				size_hint_y: 0.1
			SectorPointView:
				rcid:'finishLine'
				size_hint_y: 0.1
		    	
		    HSeparatorMinor:
		        text: 'Sectors'
		    ScrollView:
		    	size_hint_y: 0.6
				do_scroll_x: False
		    	GridLayout:
		    		spacing: dp(8)
		    		rcid: 'sectorsGrid'
		    		cols: 1
	    
