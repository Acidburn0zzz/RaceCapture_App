#:kivy 1.8.0

<LinkedTreeViewLabel>:
    font_size: dp(16)
    font_name: 'resource/fonts/Roboto-Light.ttf'

<ConfigView>:
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            size_hint_x: 0.2
            spacing: 0
            orientation: 'vertical'
            spacing: dp(30)
            ScrollView:
                id: scroller            
                TreeView:
                    height: max(self.minimum_height, scroller.height)
                    rcid: 'menu'
                    size_hint_y: None
                    hide_root: True
                    indent_level: dp(0)
                    indent_start: dp(5)
            BoxLayout:
                size_hint_y: 0.1
                orientation: 'horizontal'
                spacing: dp(30)
                IconButton:
                    id: 'open'
                    size_hint: (1.0, 1.0)
                    pos_hint: {'center_x': .5, 'center_y': .5}                                  
                    text: '\357\204\225'
                    rcid: 'openconfig'
                    on_release: root.openConfig()
                IconButton:
                    id: 'save'
                    size_hint: (1.0, 1.0)
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text: '\357\203\207'
                    rcid: 'saveconfig'
                    on_release: root.saveConfig()
            BoxLayout:
                size_hint_y: 0.1
                orientation: 'horizontal'
                spacing: dp(30)                
                IconButton:
                    id: 'read'
                    size_hint: (1.0, 1.0)
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text: '\357\202\223'
                    rcid: 'readconfig'
                    on_release: root.readConfig()
                IconButton:
                    id: 'write'
                    size_hint: (1.0, 1.0)                
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text: '\357\200\231'
                    rcid: 'writeconfig'
                    on_release: root.writeConfig()
                    disabled: True
        BoxLayout:
            size_hint_x: 0.8
            padding: [sp(10), sp(10), 0, 0]
            
            id: content
			FieldLabel:
				font_size: dp(50)
				halign: 'center'
				text: 'Loading...'