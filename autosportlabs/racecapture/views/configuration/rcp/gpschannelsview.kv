#:kivy 1.8.0

<GPSChannelsView>:
    padding: [30,30]
    orientation: 'vertical'
    BoxLayout:
    	spacing: dp(20)
    	size_hint: (1.0,0.25)
    	orientation: 'vertical'
    	SampleRateSelectorView:
            rcid: 'sr'
        HSeparator:
            text: 'Channels'    		
    GridLayout:
    	spacing: [dp(30),dp(30)]
    	padding: [dp(30),dp(30)]
        cols: 2
        FieldLabel:
            text: 'Position'
            halign: 'right'
        Switch:
        	rcid: 'pos'
        	on_active: root.onPosActive(*args)
        FieldLabel:
            text: 'Speed'
            halign: 'right'
        Switch:
        	rcid: 'speed'
        	halign: 'right'
        	on_active: root.onSpeedActive(*args)
        FieldLabel:
            text: 'Distance'
            halign: 'right'
        Switch:
        	rcid: 'dist'
        	on_active: root.onDistActive(*args)
        FieldLabel:
            text: 'Altitude'
            halign: 'right'
        Switch:
            rcid: 'alt'
            on_active: root.onAltitudeActive(*args)
        FieldLabel:
            text: 'Satellites'
            halign: 'right'
        Switch:
        	rcid: 'sats'
        	on_active: root.onSatsActive(*args)
        FieldLabel:
            text: 'GPS Quality'
            halign: 'right'
        Switch:
            rcid: 'qual'
            on_active: root.onGpsQualityActive(*args)
