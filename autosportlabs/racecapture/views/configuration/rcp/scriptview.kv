#:kivy 1.8.0

<LuaCodeInput>:

<LuaScriptingView>:
    spacing: 10
    padding: (10,10)
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.9
            ScrollView:
                size_hint_y: 0.75
                do_scroll_x:False
                id: luaScriptScrollView
                LuaCodeInput:
                	rcid: 'script'
                    size_hint_y: None
                    font_name: 'data/fonts/DroidSansMono.ttf'
                    font_size: 16
                    height: max(self.minimum_height, luaScriptScrollView.height)
                    on_text: root.on_script_changed(*args)
            Splitter:
                horizontal: False
                sizable_from: 'top'
                ScrollView:
                    size_hint_y: 0.25
                    id: loggingScrollView
                    rcid: 'logfileSv'
                    do_scroll_x:False
                    CodeInput:
                    	rcid: 'logfile'
                    	color: (1.0, 1.0, 1.0, 1.0)
                    	background_color: (0.8, 0.8, 0.8, 1.0)
                        size_hint_y: None
                        height: max(self.minimum_height, loggingScrollView.height)
        BoxLayout:
            size_hint_y: 0.1
            padding: [10,10]
            orientation: 'horizontal'
            BoxLayout:
            	size_hint_x: 0.25
            	orientation: 'horizontal'
            	CheckBox:
            		rcid: 'pollLog'
            		size_hint_x: 0.25
            		on_active: root.enableScript(*args)
            	FieldLabel:
            		size_hint_x: 0.75
            		halign: 'left'
            		text: 'Poll logfile'

			BoxLayout:
				size_hint_x: 0.35
				spacing: dp(5)
				orientation: 'horizontal'
            	FieldLabel:
            		size_hint_x: 0.5
            		halign: 'right'
            		text: 'Logging Level'
        		LogLevelSpinner:
        			size_hint_x: 0.5
        			size_hint_y: 1.0
        			rcid: 'logLevel'
        			on_control: root.on_loglevel_selected(*args)
        			
            Label:
            	size_hint_x: 0.2
            	
            IconButton:
            	size_hint_x: 0.05
            	text: "\357\200\215"
            	on_release: root.clearLog()
            Label:
            	size_hint_x: 0.1
            IconButton:
                size_hint_x: 0.05
                text: "\357\200\241"
                on_release: root.runScript()
            	