#:kivy 1.8.0

<LuaCodeInput>:

<LuaScriptingView>:
    spacing: 10
    padding: (10,10)
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.9
            ScrollView:
                size_hint_y: 0.75
                do_scroll_x:False
                id: luaScriptScrollView
                LuaCodeInput:
                	rcid: 'script'
                    size_hint_y: None
                    font_name: 'data/fonts/DroidSansMono.ttf'
                    font_size: 16
                    height: max(self.minimum_height, luaScriptScrollView.height)
                    on_text: root.on_script_changed(*args)
            Splitter:
                horizontal: False
                sizable_from: 'top'
                ScrollView:
                    size_hint_y: 0.25
                    id: loggingScrollView
                    do_scroll_x:False
                    TextInput:
                        size_hint_y: None
                        height: max(self.minimum_height, loggingScrollView.height)
        BoxLayout:
            size_hint_y: 0.1
            padding: [10,10]
            orientation: 'horizontal'
            height: 30
            IconButton:
                size_hint_x: 0.25
                text: "\357\202\223"
                on_release: root.readScript()
            IconButton:
                size_hint_x: 0.25
                text: "\357\200\231"
                on_release: root.writeScript()
            IconButton:
                size_hint_x: 0.25
                text: "\357\200\241"
                on_release: root.runScript()
