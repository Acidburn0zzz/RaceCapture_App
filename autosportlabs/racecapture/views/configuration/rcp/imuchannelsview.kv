#:kivy 1.8.0

<ImuChannel>:
    orientation: 'horizontal'
    spacing: dp(5)
    Switch:
        rcid: 'enabled'
        on_active: root.on_enabled(*args)
    Label:
        rcid: 'label'
        text: ''
    OrientationSpinner:
        rcid: 'orientation'
        on_text: root.on_orientation(*args)
    ImuMappingSpinner:
    	rcid: 'mapping'
    	on_text: root.on_mapping(*args)
    IntegerValueField:
    	rcid: 'zeroValue'
        text: ''
        on_text: root.on_zero_value(*args)

<AccelChannelsView>:
	rcid: 'ac'
    orientation: 'vertical'
    size_hint: (1.0,0.6)

<GyroChannelsView>:
	rcid: 'gc'
    orientation: 'vertical'
    size_hint: (1.0,0.3)

<ImuChannelsView>:
	spacing: dp(20)
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: 0.10
        orientation: 'horizontal'
        BoxLayout:
        	size_hint: 0.4, 0.8
        	orientation: 'vertical'
		    SampleRateSelectorView:
		        id: sr
		BoxLayout:
			size_hint_x: 0.3
        BoxLayout:
        	size_hint: 0.3, 1.0
        	orientation: 'horizontal'
        	spacing: dp(30)
        	Button:
        		size_hint_x: 0.6
        		text: 'Calibrate'
        		on_press: root.on_calibrate()
    HSeparator:
        text: 'Channels'
        size_hint_y: 0.05
    BoxLayout:
    	size_hint_y: 0.05
        orientation: 'horizontal'
        HSeparatorMinor:
            text: ''
        HSeparatorMinor:
            text: 'Axis'
        HSeparatorMinor:
            text: 'Orientation'
        HSeparatorMinor:
            text: 'Physical Mapping'
        HSeparatorMinor:
            text: 'Zero Level'
    ScrollView:
        id: scroller
        size_hint_y: 0.8
        do_scroll_x: False
        GridLayout:
            id: imu_channels
            row_default_height: root.height * 0.1
            padding: (dp(5), dp(5))
            spacing: dp(5)
            row_force_default: True
            size_hint_y: None
            height: max(self.minimum_height, scroller.height)
            cols: 1
