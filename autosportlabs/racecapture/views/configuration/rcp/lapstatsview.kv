#:kivy 1.8.0

<LapStatsView>:
    spacing: dp(20)
    orientation: 'vertical'
	HSeparator:
        text: 'Race Timing'
        size_hint_y: 0.05
		
	SettingsView:
        size_hint_y: 0.3
        id: lapstats
        label_text: 'Race Timing'
        help_text: 'Enable lap/run timing for Circuit and Point to Point racing mode'
        
    SettingsView:
        size_hint_y: 0.3
        id: predtime
        label_text: 'Predictive Timing'
        help_text: 'Enable the predictive lap timer'

    BoxLayout:
        size_hint_y: 0.35
