#:kivy 1.8.0


<GPIOChannelsView>:

<GPIOChannel>:
    BoxLayout:
        orientation: 'horizontal'
        spacing: dp(5)
        BoxLayout: 
            spacing: dp(5)
            size_hint: (1.0,1.0)
            orientation: 'vertical'
            HSeparator:
                text: 'Configuration'
            ChannelNameSelectorView:
            	rcid: 'chanId'
            	channel_type: 3
            SampleRateSelectorView:
            	rcid: 'sr'
        BoxLayout:
            spacing: dp(5)
            size_hint: (1.0,1.0)
            orientation: 'vertical'
            HSeparator:
                text: 'Options'
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (1.0,0.5)
                FieldLabel:
                    text: 'Mode'
                    halign: 'right'
                GPIOModeSpinner:
                    rcid: 'mode'
                    on_text: root.on_mode(*args)
            FieldLabel:
            	halign: 'right'
                size_hint: (None, 0.5)
