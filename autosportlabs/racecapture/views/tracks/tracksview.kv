#:kivy 1.8.0

<TrackItemView>:
	orientation: 'horizontal'
	CheckBox:
		size_hint_x: 0.10
	RaceTrackView:
		rcid: 'track'
		size_hint_x: 0.90

<TracksView>:
    size_hint: (1.0, 1.0)
    orientation: 'vertical'
    padding: [5,5]
    spacing: [5,5]    
	HSeparator:
		text: 'Race Tracks'
		size_hint_y: 0.05
		halign: 'left'    
	BoxLayout:
		size_hint_y: 0.01
		Label:
    BoxLayout:
	    size_hint_y: None
	    height: dp(30)
    	orientation: 'horizontal'
    	Label:
    		size_hint_x: 0.125
    		text: 'Search'
		TextInput:
			size_hint_x: 0.50
			rcid: 'namefilter'
		Label:
			size_hint_x: 0.125
			text: 'Region'
		Spinner:
			size_hint_x: 0.25
			rcid: 'regionselect'
			values: ('All', 'North America', 'North America West', 'North America East', 'North America Central', 'United Kingom', 'Europe', 'Australia / New Zealand', 'Canada', 'South America', 'Eastern Europe', 'Africa') 			
						
	ScrollView:
		size_hint_y: 0.68
		id: scrltracks
			
	    do_scroll_x:False
	    do_scroll_y:True
	    GridLayout:
	    	rcid: 'tracksgrid'
	        padding: [dp(20), dp(20)]
	        spacing: [dp(10), dp(10)]
	        size_hint_y: None
	        #height: max(self.minimum_height, scrltracks.height)
	        cols: 1
	        
    BoxLayout:
    	size_hint_y: 0.06
    	orientation: 'horizontal'
    	CheckBox:
    		size_hint_x: 0.05
    		rcid: 'selectall'
    	Label:
    		size_hint_x: 0.25
    		text: 'Select All'
    	Label:
    		size_hint_x: 0.7
    	IconButton:
    		size_hint_x: 0.05
    		text: 'ï€¡'
    		on_press: root.on_update_check()
	    
	       