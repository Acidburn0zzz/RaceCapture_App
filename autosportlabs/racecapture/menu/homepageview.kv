<FeatureButton>
	line_color: (0.5, 0.0, 0.0, 1.0)
	icon_color: (1.0, 1.0, 1.0, 0.8)
	title_color: (1.0, 1.0, 1.0, 0.4)
	line_width: 5
	
<HomePageView>:
	BoxLayout:
		padding: [dp(50), dp(50)]				
		orientation: 'vertical'
		GridLayout:
			spacing: dp(60)
			rows: 2
			cols: 3
			FeatureButton:
				icon: '\357\203\244'
				title: 'Dashboard'
				on_press: root.show_view('dashboard')
			FeatureButton:
				icon: '\357\202\200'
				title: 'Analysis'
				on_press: root.show_view('analysis')				
			FeatureButton:
				icon: '\357\202\205'
				title: 'Configuration'
				on_press: root.show_view('config')
			FeatureButton:
				icon: '\357\200\230'
				title: 'Race Tracks'
				on_press: root.show_view('tracks')
			FeatureButton:
				icon: '\357\201\204'
				title: 'Channels'
				on_press: root.show_view('channels')
			
