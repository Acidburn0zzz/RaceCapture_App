#:kivy 1.8.0

<AnalogChannelsView>:

<AnalogChannel>:
    padding: [5,5]
	orientation: 'horizontal'            
	BoxLayout:
        orientation: 'vertical'
        padding: [0,0,2,0]
        spacing: [2,2]
        HSeparator:
            text: 'Configuration'
        ChannelNameSelectorView:
            rcid: 'chanId'
            channelType: 'analog'
            size_hint: (1.0,0.3)
        SampleRateSelectorView:
            rcid: 'sr'
            size_hint: (1.0,0.3)
        HSeparator:
            text: 'Mode'
	    GridLayout:
	        size_hint: (1.0, 1.0)
	        cols: 2
	        Label:
        		text: 'Raw (0 - 1023)'
	        CheckBox:
	        	group: 'scalingType'
                rcid: 'smRaw'
                on_active: root.on_scaling_type_raw(*args)
	        Label:
	        	text: 'Linear'
	        CheckBox:
	        	group: 'scalingType'
                rcid: 'smLinear'
                on_active: root.on_scaling_type_linear(*args)
	        Label:
	        	text: 'Mapped'
	        CheckBox:
	        	group: 'scalingType'
                rcid: 'smMapped'
                on_active: root.on_scaling_type_map(*args)
    VSeparator:
    BoxLayout:
        orientation: 'vertical'
        padding: [2,0,0,0]
        HSeparator:
            text: 'Calibration'
        AnalogScalingMapEditor:
            rcid: 'mapEditor'
 
<AnalogScaler>:
    id: graph
    size_hint: (0.75, 1.0)
    xlabel: 'Volts'
    ylabel: 'Scaled'
    x_ticks_minor: 1
    x_ticks_major: 1
    y_grid_label: True
    x_grid_label: True
    padding: 5
    x_grid: True
    y_grid: True
    xmin: 0
    xmax: 5

<AnalogScalingMapEditor>:
    orientation: 'vertical'
    AnalogScaler:
        size_hint: (1.0, 0.6)
        rcid: 'scalingGraph'
    GridLayout:
        cols: 6
        size_hint: (1.0, 0.4)
        Label:
            text: ''
        Label:
            text: '1'
        Label:
            text: '2'
        Label:
            text: '3'
        Label:
            text: '4'
        Label:
            text: '5'
        Label:
            text: 'Volts'
        ValueField:
            rcid: 'v_0'
            text: ''
            on_text: root.on_volts(0, *args)
        ValueField:
            rcid: 'v_1'
            text: ''
            on_text: root.on_volts(1, *args)            
        ValueField:
            rcid: 'v_2'
            text: ''
            on_text: root.on_volts(2, *args)            
        ValueField:
            rcid: 'v_3'
            text: ''
            on_text: root.on_volts(3, *args)            
        ValueField:
            rcid: 'v_4'
            text: ''
            on_text: root.on_volts(4, *args)            
        Label:
            text: 'Scaled'
        ValueField:
            rcid: 's_0'
            text: ''
            on_text: root.on_scaled(0, *args)            
        ValueField:
            rcid: 's_1'
            text: ''
            on_text: root.on_scaled(1, *args)            
        ValueField:
            rcid: 's_2'
            text: ''
            on_text: root.on_scaled(2, *args)            
        ValueField:
            rcid: 's_3'
            text: ''
            on_text: root.on_scaled(3, *args)            
        ValueField:
            rcid: 's_4'
            text: ''
            on_text: root.on_scaled(4, *args)            
