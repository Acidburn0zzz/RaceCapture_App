#:kivy 1.8.0
        
<SectorPointView>:
	orientation: 'horizontal'
	Label:
		text: "Sector"
		rcid: 'label'
	ValueField:
		rcid: 'lat'
	ValueField:
		rcid: 'lon'

<TrackConfigView>:
	orientation: 'vertical'
	BoxLayout:
		size_hint: (1.0, 0.2)
		orientation: 'horizontal'
		FieldLabel:
			halign: 'right'
			text: 'Enable auto track detection'
		Switch:
			rcid: 'autoTrack'
    HSeparator:
        text: 'Manual Configuration'
	BoxLayout:
		size_hint: (1.0, 0.2)
		orientation: 'horizontal'
		FieldLabel:
			halign: 'right'
			text: 'Separate start and finish lines'
		Switch:
			rcid: 'separateSfLine'
    BoxLayout:
    	padding: (30, 5)
    	orientation: 'vertical'
    	size_hint: (1.0, 1.0)
	    BoxLayout:
	    	size_hint: (1.0, 0.2)
			orientation: 'horizontal'
	    	Label: 
	    		text: 'Type'
	    	Label:
	    		text: 'Latitude'
			Label:
				text: 'Longitude'
	    ScrollView:
	    	size_hint: (1.0,0.8)
			do_scroll_x: False
	    	GridLayout:
	    		spacing: (5,5)
	    		rcid: 'sectorsGrid'
	    		cols: 1
	Label:
		size_hint:(1.0, 0.2)

    