#:kivy 1.8.0
        
<SectorPointView>:
	BoxLayout:
		orientation: 'horizontal'
		Label:
			text: "Sector"
			rcid: 'title'
		FloatValueField:
			rcid: 'lat'
			on_text: root.on_lat(*args)
		FloatValueField:
			rcid: 'lon'
			on_text: root.on_lon(*args)

<TrackConfigView>:
	padding: (dp(10),dp(10))
	spacing: dp(20)
	orientation: 'vertical'
	BoxLayout:
		orientation: 'vertical'
		size_hint_y: 0.4
		spacing: dp(20)
		SettingsView:
			size_hint_y: 0.4
			rcid: 'autoDetect'
			label_text: 'Enable automatic track detection'
			help_text: 'Automatically detect and configure the race track upon GPS lock, after power-up. If you want a fixed configuration, leave off and configure your start/finish and sector targets below'
	    HSeparator:
	        text: 'Manual Configuration'
	        size_hint_y: 0.1
	    SettingsView:
	    	size_hint_y: 0.5
	    	rcid: 'sepStartFinish'
	    	label_text: 'Separate start and finish lines'
	    	help_text: 'Specify a separate start / finish line for Stage Rally, Hill Climb or Autocross type courses. Leave off for circuit type courses'
    BoxLayout:
    	padding: (dp(30), dp(5))
    	spacing: dp(8)
    	orientation: 'vertical'
    	size_hint_y: 0.6
	    	
	    BoxLayout:
	    	size_hint_y: 0.1
	    	spacing: dp(5)
			orientation: 'horizontal'
	    	HSeparatorMinor: 
	    		text: 'Type'
	    	HSeparatorMinor:
	    		text: 'Latitude'
			HSeparatorMinor:
				text: 'Longitude'

    	SectorPointView:
    		rcid:'startLine'
    		size_hint_y: 0.1
    	SectorPointView:
    		rcid:'finishLine'
    		size_hint_y: 0.1
	    	
        HSeparatorMinor:
            text: 'Sectors'
	    ScrollView:
	    	size_hint_y: 0.65
			do_scroll_x: False
	    	GridLayout:
	    		spacing: dp(8)
	    		rcid: 'sectorsGrid'
	    		cols: 1

    