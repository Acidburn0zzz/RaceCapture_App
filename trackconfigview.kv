#:kivy 1.8.0
        
<SectorPointView>:
	orientation: 'horizontal'
	Label:
		text: "Sector"
		rcid: 'title'
	ValueField:
		rcid: 'lat'
	ValueField:
		rcid: 'lon'

<TrackConfigView>:
	padding: (10,10)
	spacing: 10
	orientation: 'vertical'
	SettingsViewSwitch:
		rcid: 'autoDetect'
		label_text: 'Enable automatic track detection'
		help_text: 'Automatically detect and configure the race track upon GPS lock, after power-up. If you want a fixed configuration, leave off and configure your start/finish and sector targets below'
    HSeparator:
        text: 'Manual Configuration'
    SettingsViewSwitch:
    	rcid: 'trackSepStartFinish'
    	label_text: 'Separate start and finish lines'
    	help_text: 'Specify a separate start / finish line for Stage Rally, Hill Climb or Autocross type courses. Leave off for circuit type courses'
    BoxLayout:
    	padding: (30, 5)
    	orientation: 'vertical'
    	size_hint: (1.0, 1.0)
	    BoxLayout:
	    	size_hint: (1.0, 0.2)
			orientation: 'horizontal'
	    	Label: 
	    		text: 'Type'
	    	Label:
	    		text: 'Latitude'
			Label:
				text: 'Longitude'
	    ScrollView:
	    	size_hint: (1.0,0.8)
			do_scroll_x: False
	    	GridLayout:
	    		spacing: (5,5)
	    		rcid: 'sectorsGrid'
	    		cols: 1
	Label:
		size_hint:(1.0, 0.2)
		text:

    