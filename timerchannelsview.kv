#:kivy 1.8.0

<PulsePerRevSpinner>:

<PulseChannelsView>:

<PulseChannel>:
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout: 
            padding: [5, 5]
            orientation: 'vertical'
            HSeparator:
                text: 'Configuration'
            ChannelNameSelectorView:
            	rcid: 'chanId'
            SampleRateSelectorView:
            	rcid: 'sr'
            Label:
                size_hint: (None, 1.0)
        BoxLayout:
            padding: [5, 5]
            orientation: 'vertical'
            HSeparator:
                text: 'Options'
            BoxLayout:
                padding: [2, 2]
                orientation: 'horizontal'
                Label:
                    text: 'Channel Operation Mode'
                TimerModeSpinner:
                	rcid: 'mode'
                	on_text: root.on_mode(*args)
            BoxLayout:
                padding: [2, 2]
                orientation: 'horizontal'
                Label:
                    text: 'Clock Divider'
                DividerSpinner:
                	rcid: 'divider'
                	on_text: root.on_divider(*args)
            BoxLayout:
                padding: [2, 2]
                orientation: 'horizontal'
                Label:
                    text: 'Pulse per Revolution/\nTeeth per Wheel'
                PulsePerRevSpinner:
                	rcid: 'ppr'
                	on_text: root.on_pulse_per_rev(*args)
