#:kivy 1.8.0

<OBD2Channel>:
    spacing: 10
    size_hint_y: None
    height: 30
    orientation: 'horizontal'
    Label:
    	rcid: 'pidId'
    	text: ''
    	font_size: 20
    	size_hint_x: 0.1    	
    ChannelNameSpinner:
    	size_hint_x: 0.4
        rcid: 'chanId'
        on_text: root.on_channel(*args)
    SampleRateSpinner:
    	size_hint_x: 0.4
        rcid: 'sr'
        on_text: root.on_sample_rate(*args)
    IconButton:
    	size_hint_x: 0.1
    	text: '\357\200\224'
    	on_release: root.on_delete()

<OBD2ChannelsView>:
    padding: (10,10)
    spacing: 20
    orientation: 'vertical'
	SettingsViewSwitch:
		rcid: 'obd2enable'
		label_text: 'Enable OBDII channels'
		help_text: 'Specify one or more OBDII Channels to query and the logged sample rate.\n\nNote, OBDII channels are queried sequentially; actual data update rate is independent of the selected logging rate'
		size_hint_y: 0.3
	Label:
		size_hint_y: 0.02
	BoxLayout:
		spacing: 5
		orientation: 'vertical'		
	    HSeparator:
	        text: 'OBDII Channels'
		BoxLayout:
			orientation: 'horizontal'
			size_hint: (1.0, 0.15)
			spacing: 10
	        HSeparatorMinor:
	            text: 'Channel'
	        	size_hint_x: 0.3            
	        HSeparatorMinor:
	            text: 'Logging Rate'
	        	size_hint_x: 0.3
	    ScrollView:
	        id: scrlobd2
	        size_hint_y: 0.75
	        do_scroll_x:False
	        do_scroll_y:True
	        GridLayout:
	        	rcid: 'obd2grid'
	            padding: [20,20]
	            spacing: [10,10]
	            size_hint_y: None
	            height: max(self.minimum_height, scrlobd2.height)
	            cols: 1
	
    BoxLayout:
    	size_hint_y: 0.2
    	spacing: dp(5)
    	orientation: 'vertical'
    	IconButton:
    		pos_hint: {'center_x': .5, 'center_y': .5}
    		size_hint: (0.1, 0.1)
    		text: '\357\201\247'
    		on_release: root.on_add_obd2_channel()
        