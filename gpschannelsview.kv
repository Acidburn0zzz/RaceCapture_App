#:kivy 1.0.4

<GPSChannelsView>:
    spacing: 20
    orientation: 'vertical'
    SampleRateSelectorView:
    	gps_id: 'sr'
        size_hint: (1.0,0.1)
    GridLayout:
        size_hint: (1.0,0.6)
        cols: 2
        Label:
            text: 'Position'
        Switch:
        	gps_id: 'pos'
        Label:
            text: 'Speed'
        Switch:
        	gps_id: 'speed'
        Label:
            text: 'Distance'
        Switch:
        	gps_id: 'dist'
        Label:
            text: 'Time of Day'
        Switch:
        	gps_id: 'time'
        Label:
            text: 'Satellites'
        Switch:
        	gps_id: 'sats'
    Label:
        size_hint: (1.0, 0.4)
