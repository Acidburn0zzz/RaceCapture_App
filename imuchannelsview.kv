#:kivy 1.8.0

<ImuChannel>:
    orientation: 'horizontal'
    padding: [5,5]
    spacing: [5,5]
    Label:
        rcid: 'label'   
        text: ''
    CheckBox:
        rcid: 'enabled'
        on_active: root.on_enabled(*args)
    OrientationSpinner:
        rcid: 'orientation'
        on_text: root.on_orientation(*args)
    ImuMappingSpinner:
    	rcid: 'mapping'
    	on_text: root.on_mapping(*args)
    TextInput:
    	rcid: 'zeroValue'
        text: ''
        on_text: root.on_zero_value(*args)

<AccelChannelsView>:
	rcid: 'ac'
    orientation: 'vertical'
    size_hint: (1.0,0.6)
    BoxLayout:
        orientation: 'horizontal'
        HSeparatorMinor:
            text: 'Axis'
        HSeparatorMinor:
            text: 'Enabled'
        HSeparatorMinor:
            text: 'Mode'
        HSeparatorMinor:
            text: 'Physical Mapping'
        HSeparatorMinor:
            text: 'Zero Level'

<GyroChannelsView>:
	rcid: 'gc'
    orientation: 'vertical'
    size_hint: (1.0,0.3)
    padding: [5,5]
    spacing: [5,5]
    BoxLayout:
        orientation: 'horizontal'
        HSeparatorMinor:
            text: 'Axis'
        HSeparatorMinor:
            text: 'Enabled'
        HSeparatorMinor:
            text: 'Mode'
        HSeparatorMinor:
            text: 'Physical Mapping'
        HSeparatorMinor:
            text: 'Zero Level'

<ImuChannelsView>:
    orientation: 'vertical'
    padding: [5,5]
    SampleRateSelectorView:
        size_hint: (1.0,0.2)
        rcid: 'sr'
    HSeparator:
        text: 'Accelerometer Channels'
    AccelChannelsView:

    HSeparator:
        text: 'Gyro Channels'
    GyroChannelsView:        

