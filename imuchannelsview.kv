#:kivy 1.8.0

<ImuChannel>:
    orientation: 'horizontal'
    padding: [5,5]
    spacing: [5,5]
    Label:
        imu_id: 'label'   
        text: ''
    CheckBox:
        imu_id: 'enabled'
    OrientationSpinner:
        imu_id: 'orientation'
    ImuMappingSpinner:
    	imu_id: 'mapping'
    TextInput:
    	imu_id: 'zeroValue'
        text: ''

<AccelChannelsView>:
	imu_id: 'ac'
    orientation: 'vertical'
    size_hint: (1.0,0.6)
    BoxLayout:
        orientation: 'horizontal'
        HSeparatorMinor:
            text: 'Axis'
        HSeparatorMinor:
            text: 'Enabled'
        HSeparatorMinor:
            text: 'Mode'
        HSeparatorMinor:
            text: 'Physical Mapping'
        HSeparatorMinor:
            text: 'Zero Level'

<GyroChannelsView>:
	imu_id: 'gc'
    orientation: 'vertical'
    size_hint: (1.0,0.3)
    padding: [5,5]
    spacing: [5,5]
    BoxLayout:
        orientation: 'horizontal'
        HSeparatorMinor:
            text: 'Axis'
        HSeparatorMinor:
            text: 'Enabled'
        HSeparatorMinor:
            text: 'Mode'
        HSeparatorMinor:
            text: 'Hardware Mapping'
        HSeparatorMinor:
            text: 'Zero Level'

<ImuChannelsView>:
    orientation: 'vertical'
    padding: [5,5]
    SampleRateSelectorView:
        size_hint: (1.0,0.2)
    HSeparator:
        text: 'Accelerometer Channels'
    AccelChannelsView:

    HSeparator:
        text: 'Gyro Channels'
    GyroChannelsView:        

